{% extends 'base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}
<div class="p-4">
    <h1 class="text-2xl font-bold mb-4">User List</h1>
    <form method="get" action="{{ path('list_users') }}" class="mb-4">
        <input type="text" name="search" placeholder="Search by name" value="{{ app.request.query.get('search', '') }}" class="border rounded p-2">
        <button type="submit" class="bg-blue-500 text-white rounded p-2">Search</button>
    </form>

    <table class="min-w-full bg-white">
        <thead>
            <tr>
                <th class="py-2">ID</th>
                <th class="py-2">First Name</th>
                <th class="py-2">Last Name</th>
                <th class="py-2">Email</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr class="border-t">
                    <td class="py-2">{{ user.id }}</td>
                    <td class="py-2">{{ user.firstName }}</td>
                    <td class="py-2">{{ user.lastName }}</td>
                    <td class="py-2">{{ user.email }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
