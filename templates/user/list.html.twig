{% extends 'base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}
<div class="p-4 bg-gray-100">
    <h1 class="text-3xl font-bold text-center mb-8">User List</h1>
    <form method="get" action="{{ path('list_users') }}" class="flex justify-center mb-8">
        <input type="text" name="search" placeholder="Search by name" value="{{ app.request.query.get('search', '') }}" class="border border-gray-300 rounded-lg p-2 w-1/3">
        <button type="submit" class="ml-2 bg-blue-500 text-white rounded-lg px-4 py-2">Search</button>
    </form>

    <table class="min-w-full bg-gray-100 shadow-md rounded-lg overflow-hidden">
        <thead>
            <tr>
                <th class="py-2 pl-4 text-left">ID</th>
                <th class="py-2 text-left">First Name</th>
                <th class="py-2 text-left">Last Name</th>
                <th class="py-2 pl-4 text-left">Email</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr class="border-t">
                    <td class="py-2 pl-4">{{ user.id }}</td>
                    <td class="py-2 pl-4">{{ user.firstName }}</td>
                    <td class="py-2 pl-4">{{ user.lastName }}</td>
                    <td class="py-2 pl-4 text-left">{{ user.email }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
